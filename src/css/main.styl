#jumbo
  height 55vw

  .bars
    width 100%
    height 20%

    .bar
      lost-column 1/4 4 0

      &:nth-child(1)
        height 90%
        background cyan
      &:nth-child(2)
        height 70%
        background magenta
      &:nth-child(3)
        height 80%
        background yellow
      &:nth-child(4)
        height 100%
        background black

  .content
    lost-align center
    width 100%
    height 80%
    color green

