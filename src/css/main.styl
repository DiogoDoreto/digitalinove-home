@import 'vars'

#jumbo
  height 55vw

  .bars
    width 100%
    height 20%

    .bar
      lost-column 1/4 4 0
      transition height 0.6s ease-in-out

      &:nth-child(1)
        height 90%
        background $cyan
      &:nth-child(2)
        height 70%
        background $magenta
      &:nth-child(3)
        height 80%
        background $yellow
      &:nth-child(4)
        height 100%
        background black

  .content
    width 95%
    height 80%
    margin 0 auto

    .logo
      lost-column 1/3
      lost-align center
      text-align center
      height 100%
      > div
        width 100%

      h1
        background url(../images/logo-digital-inove-nome.svg) no-repeat top left
        background-size contain

    .info
      lost-column 2/3
      lost-align vertical
      height 100%
      text-align center

      .contact
        .phone
          display inline-block
          font-size 2em
          padding-left 1.5em
          margin-right 1em
          font-weight bold
          background $phone no-repeat top left
          background-size contain
        .btn
          display inline-block
          font-size 1.5em
          padding 10px 20px
          background $cyan
          border 4px solid color($cyan b(30%))
          color white
          text-decoration none
          font-weight bold

          &:hover
            background color($cyan w(30%))

