@import 'vars'

#top-bars
  position fixed
  top 0
  width 100%
  height 11vw

  .bar
    lost-column 1/4 4 0
    transition height 0.6s ease-in-out

    &:nth-child(1)
      height 90%
      background $cyan
    &:nth-child(2)
      height 70%
      background $magenta
    &:nth-child(3)
      height 80%
      background $yellow
    &:nth-child(4)
      height 100%
      background black

#jumbo
  margin-top 12vw

  @media (min-width: 740px)
    height 44vw
  .content
    width 95%
    height 100%
    margin 0 auto

    @media (max-width: 980px)
      font-size 0.7em

    .logo
      text-align center

      @media (max-width: 739px)
        img
          max-width 400px

      @media (min-width: 740px)
        lost-column 1/3
        lost-align center
        height 100%

      > div
        width 100%

    .info
      text-align center

      @media (min-width: 740px)
        lost-column 2/3
        lost-align vertical
        height 100%

      .info-content
        width 100%

      .images
        margin-bottom 10px
        lost-utility clearfix
        @media (max-width: 739px)
          display none
          margin 0
        .image
          lost-column 1/2 2
          background grey
          height 150px

      .contact
        .phone
          display inline-block
          font-size 2em
          padding-left 1.5em
          margin-right 1em
          font-weight bold
          background $phone no-repeat top left
          background-size contain

      .btn
        display inline-block
        font-size 1.5em
        padding 10px 20px
        color white
        text-decoration none
        margin 10px
        button $cyan
        + .btn
          button $magenta

        @media (max-width: 980px)
          padding 5px 10px
